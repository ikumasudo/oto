---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="download" class="py-24 bg-gradient-to-br from-primary/10 via-base-100 to-secondary/10">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Icon -->
      <div class="mb-8">
        <svg class="w-24 h-24 mx-auto" viewBox="0 0 32 32" fill="none">
          <defs>
            <linearGradient id="download-logo-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color: oklch(55% 0.25 280)" />
              <stop offset="100%" style="stop-color: oklch(65% 0.2 320)" />
            </linearGradient>
          </defs>
          <circle cx="16" cy="16" r="14" fill="url(#download-logo-gradient)" />
          <path d="M16 8c-2.2 0-4 1.8-4 4v4c0 2.2 1.8 4 4 4s4-1.8 4-4v-4c0-2.2-1.8-4-4-4z" fill="white" />
          <path d="M22 16v1c0 3.3-2.7 6-6 6s-6-2.7-6-6v-1h-2v1c0 4 3 7.4 7 7.9V27h-2v2h6v-2h-2v-2.1c4-.5 7-3.9 7-7.9v-1h-2z" fill="white" />
        </svg>
      </div>

      <!-- Title -->
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gradient">
        {t('download.title')}
      </h2>
      <p class="text-xl text-base-content/70 mb-8">
        {t('download.subtitle')}
      </p>

      <!-- Download Button -->
      <a
        href="https://github.com/ikumasudo/oto/releases/latest"
        class="btn btn-primary btn-lg gap-2 shadow-lg shadow-primary/25 hover:shadow-primary/40 transition-shadow mb-12"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        {t('download.cta')}
      </a>

      <!-- System Requirements -->
      <div class="card bg-base-100 shadow-lg max-w-md mx-auto">
        <div class="card-body">
          <h3 class="card-title text-lg justify-center mb-4">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {t('download.requirements')}
          </h3>
          <ul class="space-y-3 text-left">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t('download.req.os')}</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t('download.req.api')}</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{t('download.req.mic')}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
