---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="pricing" class="py-24 bg-base-200/50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gradient">
        {t('pricing.title')}
      </h2>
      <p class="text-xl text-base-content/70 max-w-2xl mx-auto">
        {t('pricing.subtitle')}
      </p>
    </div>

    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Pricing Card -->
        <div class="card bg-base-100 shadow-xl border-2 border-primary">
          <div class="card-body text-center">
            <div class="badge badge-primary badge-lg mb-4">OpenAI API</div>
            <h3 class="text-2xl font-bold mb-2">{t('pricing.example.title')}</h3>
            <div class="text-5xl font-bold text-primary mb-2">
              {t('pricing.example.rate')}
            </div>
            <p class="text-base-content/70 mb-6">{t('pricing.example.note')}</p>

            <div class="divider"></div>

            <div class="space-y-4">
              <div class="flex justify-between items-center">
                <span class="text-base-content/70">{t('pricing.example.daily')}</span>
                <span class="font-bold text-xl">{t('pricing.example.monthly')}</span>
              </div>
            </div>

            <div class="card-actions justify-center mt-6">
              <a href="https://github.com/ikumasudo/oto/releases/latest" class="btn btn-primary btn-wide">
                {t('nav.download')}
              </a>
            </div>
          </div>
        </div>

        <!-- Comparison Table -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="text-xl font-bold mb-4">{t('pricing.compare.title')}</h3>
            <div class="overflow-x-auto">
              <table class="table">
                <thead>
                  <tr>
                    <th>{t('pricing.compare.service')}</th>
                    <th>{t('pricing.compare.price')}</th>
                    <th>{t('pricing.compare.type')}</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="bg-primary/5">
                    <td class="font-bold">
                      <div class="flex items-center gap-2">
                        <div class="w-2 h-2 bg-primary rounded-full"></div>
                        {t('pricing.compare.oto')}
                      </div>
                    </td>
                    <td class="text-primary font-bold">{t('pricing.compare.oto.price')}</td>
                    <td>
                      <span class="badge badge-primary badge-sm">{t('pricing.compare.oto.type')}</span>
                    </td>
                  </tr>
                  <tr>
                    <td>{t('pricing.compare.other1')}</td>
                    <td>{t('pricing.compare.other1.price')}</td>
                    <td>
                      <span class="badge badge-ghost badge-sm">{t('pricing.compare.other1.type')}</span>
                    </td>
                  </tr>
                  <tr>
                    <td>{t('pricing.compare.other2')}</td>
                    <td>{t('pricing.compare.other2.price')}</td>
                    <td>
                      <span class="badge badge-ghost badge-sm">{t('pricing.compare.other2.type')}</span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
