---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero-gradient min-h-[85vh] flex items-center">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="badge badge-primary badge-outline mb-6 text-sm">
        {t('hero.badge')}
      </div>

      <!-- Title -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        <span class="text-gradient">{t('hero.title')}</span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-base-content/70 mb-10 max-w-2xl mx-auto leading-relaxed">
        {t('hero.subtitle')}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
        <a
          href="https://github.com/ikumasudo/oto/releases/latest"
          class="btn btn-primary btn-lg gap-2 shadow-lg shadow-primary/25 hover:shadow-primary/40 transition-shadow"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          {t('hero.cta')}
        </a>
        <a
          href="https://github.com/ikumasudo/oto"
          class="btn btn-outline btn-lg gap-2"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {t('hero.cta.github')}
        </a>
      </div>

      <!-- Demo Preview -->
      <div class="relative max-w-2xl mx-auto">
        <div class="mockup-window bg-base-300 shadow-2xl border border-base-content/10">
          <div class="bg-base-200 p-8">
            <!-- Animated demo illustration -->
            <div class="flex flex-col items-center gap-4">
              <div class="flex items-center gap-4">
                <kbd class="kbd kbd-lg">Ctrl</kbd>
                <span class="text-2xl">+</span>
                <kbd class="kbd kbd-lg">Alt</kbd>
                <span class="text-2xl">+</span>
                <kbd class="kbd kbd-lg">Space</kbd>
              </div>
              <svg class="w-8 h-8 text-primary animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
              <div class="flex items-center gap-3 p-4 bg-base-100 rounded-lg shadow-inner w-full max-w-md">
                <div class="w-3 h-3 bg-error rounded-full animate-pulse"></div>
                <div class="flex-1 h-2 bg-gradient-to-r from-primary/60 to-secondary/60 rounded-full animate-pulse"></div>
              </div>
              <svg class="w-8 h-8 text-primary animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
              </svg>
              <div class="mockup-code bg-base-300 w-full max-w-md text-left">
                <pre data-prefix=">"><code class="text-success">{lang === 'ja' ? '音声がテキストに変換されました' : 'Voice converted to text'}</code></pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
