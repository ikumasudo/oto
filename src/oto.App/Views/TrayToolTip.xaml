<UserControl x:Class="oto.App.Views.TrayToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#FF1F1F1F"
            BorderBrush="#FF3F3F3F"
            BorderThickness="1"
            CornerRadius="4"
            Padding="12,8">
        <StackPanel>
            <TextBlock x:Name="AppNameText"
                       Text="oto"
                       FontWeight="SemiBold"
                       FontSize="12"
                       Foreground="White"/>
            <TextBlock x:Name="HotkeyText"
                       Text="Ctrl+Alt+Space"
                       FontSize="11"
                       Foreground="#FFAAAAAA"
                       Margin="0,2,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
