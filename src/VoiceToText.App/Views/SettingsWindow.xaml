<Window x:Class="VoiceToText.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceToText Settings"
        Width="450" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- API Key -->
                <TextBlock Text="OpenAI API Key" Style="{StaticResource LabelStyle}"/>
                <PasswordBox x:Name="ApiKeyBox" Padding="8,6" Margin="0,0,0,12"/>

                <!-- Model Selection -->
                <TextBlock Text="Transcription Model" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="ModelComboBox">
                    <ComboBoxItem Content="gpt-4o-mini-transcribe" IsSelected="True"/>
                    <ComboBoxItem Content="gpt-4o-transcribe"/>
                    <ComboBoxItem Content="whisper-1"/>
                </ComboBox>

                <!-- Hotkey -->
                <TextBlock Text="Hotkey" Style="{StaticResource LabelStyle}"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ModifiersComboBox" Grid.Column="0">
                        <ComboBoxItem Content="Ctrl + Alt" Tag="6"/>
                        <ComboBoxItem Content="Ctrl + Shift" Tag="6"/>
                        <ComboBoxItem Content="Alt + Shift" Tag="5"/>
                        <ComboBoxItem Content="Ctrl" Tag="2"/>
                        <ComboBoxItem Content="Alt" Tag="1"/>
                    </ComboBox>
                    <ComboBox x:Name="KeyComboBox" Grid.Column="2">
                        <ComboBoxItem Content="Space" Tag="32"/>
                        <ComboBoxItem Content="F1" Tag="112"/>
                        <ComboBoxItem Content="F2" Tag="113"/>
                        <ComboBoxItem Content="F3" Tag="114"/>
                        <ComboBoxItem Content="F4" Tag="115"/>
                        <ComboBoxItem Content="F5" Tag="116"/>
                        <ComboBoxItem Content="F6" Tag="117"/>
                        <ComboBoxItem Content="F7" Tag="118"/>
                        <ComboBoxItem Content="F8" Tag="119"/>
                        <ComboBoxItem Content="F9" Tag="120"/>
                        <ComboBoxItem Content="F10" Tag="121"/>
                        <ComboBoxItem Content="F11" Tag="122"/>
                        <ComboBoxItem Content="F12" Tag="123"/>
                    </ComboBox>
                </Grid>

                <!-- Max Recording Duration -->
                <TextBlock Text="Max Recording Duration (seconds)" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="MaxDurationComboBox">
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="30"/>
                    <ComboBoxItem Content="60" IsSelected="True"/>
                    <ComboBoxItem Content="120"/>
                    <ComboBoxItem Content="180"/>
                </ComboBox>

                <!-- Language -->
                <TextBlock Text="Language (optional, e.g. 'ja', 'en')" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="LanguageBox" MaxLength="5"/>

                <!-- Options -->
                <TextBlock Text="Options" Style="{StaticResource LabelStyle}" Margin="0,8,0,8"/>
                <CheckBox x:Name="AddPunctuationCheckBox" Content="Add punctuation" IsChecked="True"/>
                <CheckBox x:Name="PreserveNewlinesCheckBox" Content="Preserve newlines" IsChecked="True"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="80" Padding="8,6" Margin="0,0,8,0" Click="CancelButton_Click"/>
            <Button Content="Save" Width="80" Padding="8,6" Click="SaveButton_Click"
                    Background="#2196F3" Foreground="White" FontWeight="Medium"/>
        </StackPanel>
    </Grid>
</Window>
